<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:layout_marginBottom="?attr/actionBarSize"

    android:orientation="vertical"
    tools:context="com.activity.MainActivity">
<ImageView
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"/>
    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center">

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                fancy:fb_borderColor="#FFFFFFFF"
                fancy:fb_borderWidth="1dp"
                android:layout_weight="1"
                fancy:fb_radius="100000dp"


                fancy:fb_ghost="true"
                fancy:fb_text="Deposit" />
            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"

                android:layout_weight="1"

                fancy:fb_ghost="true"
                fancy:fb_text="Deposit" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"

                android:layout_weight="1"

                fancy:fb_ghost="true"
                fancy:fb_text="Deposit" />
            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"

                android:layout_weight="1"

                fancy:fb_ghost="true"
                fancy:fb_text="Deposit" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"

                android:layout_weight="1"

                fancy:fb_ghost="true"
                fancy:fb_text="Deposit" />
            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"

                android:layout_weight="1"

                fancy:fb_ghost="true"
                fancy:fb_text="Deposit" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"

                android:layout_weight="1"

                fancy:fb_ghost="true"
                fancy:fb_text="Deposit" />
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_ghost_email"
                android:layout_weight="1"

                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:padding="15dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                fancy:fb_ghost="true"
                fancy:fb_focusColor="#ffa8f192"
                fancy:fb_fontIconSize="15sp"
                fancy:fb_radius="25dp"
                fancy:fb_iconPosition="right"
                fancy:fb_borderWidth="1dp"
                fancy:fb_borderColor="#7ed862"
                fancy:fb_text="Contact"
                fancy:fb_textColor="#ffa8f192" />
        </TableRow>



    </TableLayout>


</RelativeLayout>

