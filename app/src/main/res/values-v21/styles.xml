<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LightCustom" parent="Theme.AppCompat.NoActionBar">
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:actionMenuTextColor">#FFFFFFFF</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:colorForeground">@color/foreground_material_dark</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorButtonNormal">#555</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/changebounds_with_arcmotion
        </item>
        <item name="android:windowSharedElementExitTransition">
            @transition/changebounds_with_arcmotion
        </item>
        <item name="android:textColorSecondary">@color/secondary_text_material_dark</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_material_light</item>
        <item name="android:textColorSecondaryInverse">
            @color/abc_primary_text_disable_only_material_light
        </item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>


    </style>
    <style name="MyButton">
        <item name="android:textSize">20dp</item>
    </style>



</resources>