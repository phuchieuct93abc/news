<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.



    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.



        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ActionBarTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/darkblue</item>
    </style>

    <style name="LightCustom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">@transition/explode</item>
        <item name="android:windowSharedElementExitTransition">@transition/explode</item>


        <item name="android:navigationBarColor">@color/primary_material_light</item>
        <item name="android:statusBarColor">@color/primary_material_light</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="colorAccent">@color/primary_dark_material_dark</item>
        <item name="android:colorBackground">@color/foreground_material_light</item>
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
        <item name="colorPrimaryDark">@color/primary_material_light</item>
        <item name="android:textColorSecondary">@color/secondary_text_material_light</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_material_dark</item>

    </style>

    <style name="DarkCustom" parent="Theme.AppCompat.NoActionBar" />

</resources>